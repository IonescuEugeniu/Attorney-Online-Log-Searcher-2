<Window x:Class="AO_Log_Searcher_2_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AO_Log_Searcher_2_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="475" Width="366">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Margin="0, 5, 0, 0" Text="Parent folder path:" TextAlignment="Center" FontSize="18" FontWeight="Bold" TextDecorations="Underline"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.ColumnSpan="2" Margin="5" Padding="1" BorderBrush="Black" BorderThickness="1" FontSize="14"/>
                <Button Grid.Column="1" Margin="7" Content="..." VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
